
<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(Components.Layouts.MainLayout)" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(Components.Layouts.MainLayout)">
            <p role="alert" style="
                text-align : center;
                padding-top :50px;
                font-size : 1.5rem;
            ">페이지를 찾을 수 없습니다.</p>
        </LayoutView>
    </NotFound>
</Router>
